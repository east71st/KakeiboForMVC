@model KakeiboForMVC.Models.HimokuViewModel

<div id="main">
    <div class="container">
        <!-- コンソールの表示 -->
        <div id="console">
            <form action="Input" method="post">
                <div class="flex-row">
                    <div style="width: 3rem; margin-right: 0.5rem;" required>費目名</div>
                    <input asp-for="Name" id="nameText" type="text" maxlength="20" style="width: 15rem;">
                </div>
                <div class="flex-row" style="justify-content: flex-start">
                    <input type="submit" value="登録" style="margin-left: 3.5rem;">
                </div>
                @if (Model.ErrorMessages.Count > 0)
                {
                    <div class="error-message-area">
                        <ul>
                            @foreach (var item in Model.ErrorMessages)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </div>
                }
            </form>
        </div>

        <!-- 費目データテーブルの表示 -->
        <div id="table-section">
            <div id="table-area">
                <table id="table">
                    <thead>
                        <tr class="head-row">
                            <th class="fixed-row-col" style="width: 3rem;">ID</th>
                            <th class="fixed-row" style="width: 20rem;">費目</th>
                            <th class="fixed-row" style="width: 3rem;">更新</th>
                            <th class="fixed-row" style="width: 3rem;">削除</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.HimokuList != null)
                        {
                            foreach (var item in Model.HimokuList)
                            {
                                <form id="form-@item.Id" method="post">
                                <tr class="body-row">
                                    <th class="fixd-col number-col">@item.Id</th>
                                    <td class="inner-box-col">
                                        <input asp-for="@item.Name" id="name-@item.Id" type="text" style="width: 100%; box-sizing: border-box; border:none;" />
                                    </td>
                                    <td class="inner-box-col">
                                        <button class="update" type="button"
                                                data-form-id="form-@item.Id"
                                                data-id="@item.Id"
                                                data-name-id="name-@item.Id">
                                            更新
                                        </button>
                                    </td>
                                    <td class="inner-box-col">
                                        <button class="delete" type="button"
                                                data-form-id="form-@item.Id"
                                                data-id="@item.Id">
                                            削除
                                        </button>
                                    </td>
                                </tr>
                                </form>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Himoku/Update.js" asp-append-version="true"></script>
