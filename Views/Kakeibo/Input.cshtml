@model KakeiboForMVC.Models.InputViewModel

<div id="main">
    <div class="container">
        <!-- コンソールの表示 -->
        <div id="console">
            <form action="Input" method="post">
                <div class="flex-row">
                    <div style="width: 2rem; margin-right: 0.5rem;">日付</div>
                    <input asp-for="Hiduke" id="hidukeDate" type="date" required style="width: 7rem;">
                </div>
                <div class="flex-row">
                    <div style="width: 2rem; margin-right: 0.5rem;">費目</div>
                    <select asp-for="HimokuId" id="himokuId" asp-items="Model.HimokuNameSelect" required></select>
                </div>
                <div class="flex-row">
                    <div style="width: 2rem; margin-right: 0.5rem;">明細</div>
                    <input asp-for="Meisai" list="meisaiList" class="form-control" maxlength="100" style="width: 15rem;" />
                    <datalist id="meisaiList" maxlength="100" style="width: 15rem;">                        
                    </datalist>
                </div>
                <div class="flex-row">
                    <div style="width: 2rem; margin-right: 0.5rem;">金額</div>
                    <input asp-for="Kingaku" type="number"
                           min=0 max=999999999999999999 autocomplete="off" style="width: 10rem;">
                </div>
                <div class="flex-row" style="justify-content: flex-start">
                    <input type="submit" value="登録" style="margin-left: 2.5rem;">
                </div>
                @if (Model.ErrorMessages.Count > 0)
                {
                    <div class="error-message-area">
                        <ul>
                            @foreach (var item in Model.ErrorMessages)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </div>
                }
            </form>
        </div>

        <!-- 家計簿データの入力履歴テーブルを表示 -->
        <div id="printableArea">
            <div id="table-section">
                <div id="table-title">
                    <div style="margin-left: 0.5rem;">家計簿 データ入力履歴</div>
                </div>

                <div id="table-area">
                    <table id="table">
                        <thead>
                            <tr class="head-row">
                                <th class="fixed-row-col" style="width: 5rem;">ID</th>
                                <th class="fixed-row" style="width: 8rem;">日付</th>
                                <th class="fixed-row" style="width: 20rem;">費目</th>
                                <th class="fixed-row" style="width: 50rem;">明細</th>
                                <th class="fixed-row" style="width: 10rem;">収入</th>
                                <th class="fixed-row" style="width: 10rem;">支出</th>
                                <th class="fixed-row no-screen-element" style="width:auto; min-width: 5rem;">備考</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.KakeiboList != null)
                            {
                                foreach (var item in Model.KakeiboList)
                                {
                                    <tr class="body-row">
                                        <th class="fixd-col number-col">@item.Id</th>
                                        <td class="date-col">@item.Hiduke?.ToString("yyyy/MM/dd")</td>
                                        <td class="text-col">@item.HimokuName</td>
                                        <td class="text-col">@item.Meisai</td>
                                        <td class="number-col">@item.NyukinGaku?.ToString("#,#")</td>
                                        <td class="number-col">@item.ShukinGaku?.ToString("#,#")</td>
                                        <td class="no-screen-element"></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer {
    <div class="footer-items">
        <div class="footer-item"><div id="print">印刷</div></div>
        <div class="footer-item"><div id="copy">コピー</div></div>
    </div>
}

@section Scripts {
    <script src="~/js/Kakeibo/Input.js" asp-append-version="true"></script>
}